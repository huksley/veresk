[*]
tab_width = 2
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 120

[*.py]
tab_width = 4
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 120
